{% extends "_main.twig" %}
{% import "macros/contactBanner.twig" as ContactBanner %}
{% block head %}
    <meta content="{{ description }}" name="Description">
{% endblock %}
{% block body %}
    <header class="hero">
        <picture>
            <source media="(max-width: 768px)" srcset="{{ hero.srcMob }}">
            <source media="(min-width: 769px)" srcset="{{ hero.src }}">
            <img alt="{{ hero.alt }}" src="{{ hero.src }}">
        </picture>
        <div class="overlay"></div>
        <h2 class="title text-center mb-5">{{ hero.title }}</h2>
    </header>
    <main>
        <section class="container pt-5 mt-md-5 md-4 text-center" id="description">
            <p data-aos="fade-up">{{ description }}</p>
        </section>
        <section class="container-fluid px-0 pt-5 mt-md-5 " id="shipyard">
            <h1 class="text-center pb-3 mb-lg-5">{{ title }}</h1>
            {% for service in services %}
                {% if service.right %}
                    <div class="row no-gutters mb-md-5 pb-5">
                        <div class="col-12 col-xl-6 order-2">
                            <div class="cocoen">
                                <img alt="{{ service.imgCompare[0]["altBefore"] }}" class="img-fluid lazy" data-src="{{ service.imgCompare[0]["imgBefore"] }}">
                                <img alt="{{ service.imgCompare[1]["altAfter"] }}" class="img-fluid lazy" data-src="{{ service.imgCompare[1]["imgAfter"] }}">
                            </div>
                        </div>
                        <div class="col-12 col-xl-6 px-3 pl-lg-5 pt-2 order-1 order-md-2">
                            <div class="d-block text-center text-xl-left">
                                <h2 class="d-inline-block mr-3 pb-3">{{ service.title }}</h2>
                                <div class="d-inline-block align-text-bottom">
                                    <img class="{{ service.width is defined ? 'width-2' : 'width-2-5' }}" alt="{{ service.alt }}" src="{{ service.icon }}">
                                </div>
                            </div>
                            <ul class="column-count-4-responsive pl-xl-2 services-list">
                                {% for item in service.list %}
                                    <li class="mb-3 mb-xl-4 px-2">{{ item }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                {% else %}
                    <div class="row no-gutters mb-md-5 pb-5">
                        <div class="col-12 col-xl-6 px-3 pl-lg-5 pt-2">
                            <div class="d-block text-center text-lg-left">
                                <h2 class="d-inline-block mr-3 pb-3">{{ service.title }}</h2>
                                <div class="d-inline-block align-text-bottom">
                                    <img class="{{ service.width is defined ? 'width-2' : 'width-2-5' }}" alt="{{ service.alt }}" src="{{ service.icon }}">
                                </div>
                            </div>
                            <ul class="column-count-4-responsive pl-xl-2 services-list">
                                {% for item in service.list %}
                                    <li class="mb-3 mb-xl-4 px-2">{{ item }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="col-12 col-xl-6">
                            <div class="cocoen">
                                <img alt="{{ service.imgCompare[0]["altBefore"] }}" class="img-fluid lazy" data-src="{{ service.imgCompare[0]["imgBefore"] }}">
                                <img alt="{{ service.imgCompare[1]["altAfter"] }}" class="img-fluid lazy" data-src="{{ service.imgCompare[1]["imgAfter"] }}">
                            </div>
                        </div>
                    </div>
                {% endif %}

            {% endfor %}
        </section>
        {{ ContactBanner.contactBanner(contact.title, contact.description, contact.btn.text, contact.btn.link, contact.img, contact.alt) }}
    </main>
{% endblock %}
{# px-0 pt-5 mt-md-5#}
