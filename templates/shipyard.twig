{% extends "_main.twig" %}
{% block body %}
    <header class="hero">
        <picture>
            <source media="(max-width: 768px)" srcset="{{ hero.srcMob }}">
            <source media="(min-width: 769px)" srcset="{{ hero.src }}">
            <img src="{{ hero.src }}">
        </picture>
        <div class="overlay"></div>
        <h2 class="title text-center mb-5">{{ hero.title }}</h2>
    </header>
    <main>
        <section class="container pt-5 mt-md-5 md-4 text-center" id="description">
            <p>{{ description }}</p>
        </section>
        <section class="container-fluid px-0 pt-5 mt-md-5 " id="shipyard">
            <h1 class="text-center pb-3 mb-lg-5">SERVICIOS</h1>
            {% for service in services %}
                <div class="row no-gutters">
                    <div class="col-12 col-lg-6">
                        <div class="cocoen">
                            <img alt="" class="img-fluid" src="{{ service.imgCompare[0]["imgBefore"] }}">
                            <img alt="" class="img-fluid" src="{{ service.imgCompare[1]["imgAfter"] }}">
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 px-3 pl-lg-5 pt-2">
                        <div class="d-block text-center text-lg-left">
                            <h2 class="d-inline-block mr-3 pb-3">{{ service.title }}</h2>
                            <div class="d-inline-block align-text-bottom">
                                <img alt="" src="{{ service.icon }}" width="16">
                            </div>
                        </div>
                        <ul class="column-count-4-responsive pl-md-2">
                            {% for item in service.list %}
                                <li class="py-2 px-1">{{ item }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endfor %}
        </section>
    </main>
{% endblock %}
