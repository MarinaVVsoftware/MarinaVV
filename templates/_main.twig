<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <meta content="ie=edge" http-equiv="X-UA-Compatible">
        <title>Document</title>
        {% block head %}{% endblock %}
    </head>
    <body>
        {% spaceless %}
            <nav class="navbar navbar-expand-lg fixed-top px-md-0 navbar-initial" id="navbar">
                <div class="container">
                    <a class="navbar-brand" href="#">
                        <img alt="" src="dist/images/marinavv-logo.svg" width="125">
                    </a>
                    <button aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation" class="hamburger hamburger--collapse navbar-toggler" data-target="#navbarToggler" data-toggle="collapse" type="button">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>

                    <div class="collapse navbar-collapse justify-content-end" id="navbarToggler">
                        <ul class="navbar-nav my-3 my-md-0 navbar-font-size">
                            {% for item in navbar %}
                                {% if item.dropdown is defined %}
                                    <li class="nav-item dropdown px-3 py-2">
                                        <a aria-expanded="false" aria-haspopup="true" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="navbarDropdown" role="button">
                                            {{ item.name }}
                                        </a>
                                        <div aria-labelledby="navbarDropdown" class="dropdown-menu">
                                            {% for subitem in item.dropdown %}
                                                <a class="dropdown-item px-3 py-2" href="#">{{ subitem.name }}</a>
                                            {% endfor %}
                                        </div>
                                    </li>
                                {% else %}
                                    <li class="nav-item px-3 py-2">
                                        <a class="nav-link" href="#">{{ item.name }}</a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                            <li class="nav-item px-3 py-2">
                                <a class="nav-link" href="#">
                                    <span>ENG</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            {% block body %}{% endblock %}

            <footer class="background-strongBlue px-0">
                <div class="container-fluid text-center pt-5">
                    <img alt="" src="dist/images/marinavv-logo.svg" width="125">
                    <hr class="my-3 border-red" size="2" width="150">
                    <div>
                        <a class="mx-3" href="#">
                            <img alt="" class="img-fluid" src="dist/images/twitter-logo.png" width="23">
                        </a>
                        <a class="mx-3 mt-5" href="#">
                            <img alt="" class="img-fluid" src="dist/images/facebook-logo.png" width="12">
                        </a>
                        <a class="mx-3" href="#">
                            <img alt="" class="img-fluid" src="dist/images/youtube-logo.png" width="25">
                        </a>
                    </div>
                    <div class="my-3 py-3">
                        <p class="text-white">{{ footer.address }}</p>
                        <div>
                            <p class="text-white d-inline-block mx-3">+52 (998) 234 01 0</p>
                            <p class="text-white d-inline-block mx-3">info@marinavv.com</p>
                        </div>
                    </div>
                    <div class="mb-2">
                        <ul class="nav justify-content-center">
                            {% for item in footer.menu %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ item.link }}">{{ item.text }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="container-fluid background-strongGray">
                    <div class="container px-0">
                        <small class="m-0 text-white">MARINA V&amp;V 2019</small>
                    </div>
                </div>
            </footer>
            {% block script %}{% endblock %}
            <script async defer src="./dist/fonts.js?v=190328-1510"></script>
            <script defer src="./dist/styles.js?v=190530-0528"></script>
            <script defer src="./dist/images.js?v=190530-0528"></script>
            <script defer src="./dist/scripts.js?v=190530-0528"></script>
        {% endspaceless %}
    </body>
</html>
